{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["database"],
  "properties": {
    "database": {
      "oneOf": [
        {
          "title": "SQLite Connection",
          "required": ["type", "name"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["sqlite"]
            },
            "name": { "type": "string" }
          }
        },
        {
          "title": "MySQL Connection",
          "required": ["type", "hostname", "database", "username", "password"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["mysql"]
            },
            "hostname": { "type": "string" },
            "database": { "type": "string" },
            "username": { "type": "string" },
            "password": { "type": "string" }
          }
        }
      ]
    },
    "instance": {
      "type": "object",
      "required": ["domain", "link", "primary", "secondary"],
      "properties": {
        "domain": {
          "title": "Name of the instance (can be anything, but usually will be set to the domain name).",
          "type": "string"
        },
        "link": {
          "title": "URL of the evertide instance.",
          "type": "string"
        },
        "primary": {
          "title": "Primary color of this instance.",
          "type": "string",
          "pattern": "#([0-9a-fA-F]{3}){1,2}"
        },
        "secondary": {
          "title": "Secondary color of this instance.",
          "type": "string",
          "pattern": "#([0-9a-fA-F]{3}){1,2}"
        }
      }
    }
  }
}
